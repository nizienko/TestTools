<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!--    <bean id="helloWorld" class="com.tutorialspoint.HelloWorld">
            <property name="message" value="Hello World!"/>
        </bean>-->
    <bean id="datasource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close" lazy-init="true">
        <property name="driverClassName" value="org.sqlite.JDBC"/>
        <property name="url" value="jdbc:sqlite:test.sqlite"/>
        <property name="initialSize" value="1"/>
        <property name="maxActive" value="1"/>
        <property name="maxIdle" value="1"/>
        <property name="poolPreparedStatements" value="true"/>
    </bean>

    <bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
        <property name="dataSource" ref="datasource"/>
    </bean>

    <bean id="testTableDao" class="TestTools.database.testTable.TestTableDao">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>

    <bean id="projectDao" class="TestTools.database.project.ProjectDao">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>

    <bean id="versionDao" class="TestTools.database.version.VersionDao">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>

    <bean id="buildDao" class="TestTools.database.build.BuildDao">
        <property name="jdbcTemplate" ref="jdbcTemplate"/>
    </bean>
</beans>